<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:fresco="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/CardBase"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        >
    <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            >
        <!-- Comment -->
        <TextView
                android:id="@+id/comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_head"
                android:layout_marginTop="4dp"
                tools:text="@string/longText"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="12dp"
                android:lineSpacingExtra="4dp"
                android:textColor="#444"
                android:layout_marginBottom="-4dp"/>
        <com.blazers.jandan.widget.DownloadFrescoView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                fresco:actualImageScaleType="fitCenter"
                android:layout_below="@+id/comment"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp"
                />
        <!-- Title and time-->
        <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/user_head"
                style="@style/ImageHeaderViewRect"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                />
        <TextView
                android:id="@+id/author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@Blazers"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#030303"
                android:gravity="center"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@+id/user_head"/>
        <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="3小时前"
                android:textColor="#666"
                android:textSize="12sp"
                android:layout_toRightOf="@+id/author"
                android:layout_marginLeft="12dp"
                android:gravity="center"
                android:layout_alignBottom="@+id/author"
                />
        <com.blazers.jandan.widget.ThumbTextButton
                style="@style/ThumbButtonBase"
                android:id="@+id/btn_fav"
                android:layout_below="@+id/content"
                android:src="@drawable/selector_fav"
                app:ttb_floatTextColor="@color/fav"
                android:layout_marginLeft="8dp"
                />
        <!-- Board and key words -->
        <TextView
                android:id="@+id/board"
                style="@style/ClickTextBase"
                tools:text="UI设计"
                android:layout_toRightOf="@+id/btn_oo" android:layout_alignTop="@+id/btn_oo"
                android:layout_marginLeft="4dp"/>
        
        <ImageButton
                style="@style/ImageButton40Base"
                android:id="@+id/btn_save"
                android:src="@drawable/selector_download"
                android:layout_alignTop="@+id/btn_oo"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:visibility="invisible"
                />
        <ImageButton
                style="@style/ImageButton40Base"
                android:id="@+id/btn_share"
                android:src="@drawable/selector_share"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                />
    </RelativeLayout>
</android.support.v7.widget.CardView>