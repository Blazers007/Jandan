<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="nPresenter"
            type="com.blazers.jandan.presenter.NewsPresenter"/>

        <variable
            name="nBean"
            type="com.blazers.jandan.model.news.NewsPost"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:clickable="true"
        android:onClick="@{() -> nPresenter.onClickPost(nBean)}"
        android:orientation="vertical"
        >

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/news_image"
            android:layout_width="88dp"
            android:layout_height="64dp"
            android:layout_marginStart="8dp"
            app:actualImageScaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:post="@{nBean}"
            />

        <TextView
            android:id="@+id/news_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text='@{nBean.title}'
            android:textColor="#333333"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toRightOf="@+id/news_image"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/news_image"
            tools:text="ConstraintLayout with DataBinding incorrect width in RecyclerView All right"
            />

        <TextView
            android:id="@+id/news_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_tag_hollow_14dp"
            android:gravity="center_vertical"
            android:text="@{nBean.tag}"
            android:textColor="#515151"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/news_image"
            app:layout_constraintLeft_toLeftOf="@+id/news_title"
            />

        <TextView
            android:id="@+id/news_author_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:maxLines="1"
            android:text='@{String.format("%s  @  %s", nBean.author.nickname, nBean.date)}'
            android:textColor="#6c6c6c"
            android:textSize="14sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/news_tag"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toRightOf="@+id/news_tag"
            app:layout_constraintRight_toRightOf="@+id/news_title"
            tools:text="Blazers  @ 2016-12-01 10:00:25"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:background="#e5e7e9"
            app:layout_constraintTop_toTopOf="parent"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:background="#e5e7e9"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </android.support.constraint.ConstraintLayout>
</layout>
