<?xml version="1.0" encoding="utf-8"?>
<com.blazers.jandan.views.nightwatch.WatchRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:fresco="http://schemas.android.com/apk/res-auto"
        xmlns:blz="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        blz:wtg_day_bg="#fff"
        blz:wtg_night_bg="#4b4b4b"
        >
    <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/news_image"
            android:layout_width="36dp"
            android:layout_height="36dp"
            fresco:roundedCornerRadius="16dp"
            android:layout_marginRight="12dp"
            fresco:actualImageScaleType="centerCrop"
            android:layout_marginLeft="12dp" android:layout_marginTop="4dp"/>
    <com.blazers.jandan.views.nightwatch.WatchTextView
            android:id="@+id/news_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/news_image"
            android:layout_centerVertical="true"
            android:textSize="17sp"
            android:maxLines="1"
            blz:wtv_day_textColor="#030303"
            blz:wtv_night_textColor="#e4e4e4"
            tools:text="Title"
            android:layout_marginRight="8dp"/>
</com.blazers.jandan.views.nightwatch.WatchRelativeLayout>