<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/quote_background"
        android:padding="8dp">
    <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/user_head"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="4dp"/>
    <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AuthorNameTextStyle"
            tools:text="@Blazers"
            android:layout_alignTop="@+id/user_head"
            android:layout_toRightOf="@+id/user_head"
            android:layout_marginLeft="12dp"
            />
    <com.blazers.jandan.views.QuoteView
            android:id="@+id/parent_quote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_head"
            android:layout_toRightOf="@id/user_head"
            android:layout_marginTop="8dp" android:layout_marginLeft="8dp"/>
    <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/parent_quote"
            android:layout_alignLeft="@+id/parent_quote" android:layout_marginTop="8dp"/>
</RelativeLayout>