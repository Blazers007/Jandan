<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:fresco="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="4dp"
        >
    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:fresco="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <com.blazers.jandan.widget.DownloadFrescoView
                android:id="@+id/drweeView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                fresco:actualImageScaleType="fitCenter"
                android:layout_below="@+id/poster"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp"
                />
        <!-- Title and time-->
        <TextView
                android:id="@+id/poster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@Blazers"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#030303"
                android:gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp"
                />
        <TextView
                android:id="@+id/postDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="3小时前"
                android:textColor="#666"
                android:textSize="12sp"
                android:layout_toRightOf="@+id/poster"
                android:layout_marginLeft="12dp"
                android:gravity="center"
                android:layout_alignBottom="@+id/poster"
                />
        <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/button" android:layout_below="@+id/drweeView"
                android:src="@drawable/selector_thumb_up"
                android:padding="12dp" android:scaleType="fitCenter" android:layout_marginLeft="8dp"
                android:layout_marginRight="4dp" android:layout_alignParentBottom="false"
                android:background="#00000000"/>
        <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/button2" android:layout_toRightOf="@+id/button" android:layout_alignTop="@+id/button"
                android:src="@drawable/selector_thumb_down"
                android:padding="12dp" android:scaleType="fitCenter" android:layout_marginRight="4dp"
                android:background="#00000000"/>
        <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/button3" android:layout_toRightOf="@+id/button2" android:layout_alignTop="@+id/button"
                android:src="@drawable/selector_comment"
                android:padding="12dp" android:scaleType="fitCenter" android:background="#00000000"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="15"
                android:id="@+id/textView" android:gravity="center" android:layout_alignTop="@+id/button"
                android:layout_toRightOf="@+id/button3"/>
        <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/btn_save" android:layout_alignTop="@+id/button" android:layout_alignParentRight="true"
                android:src="@drawable/selector_download" android:padding="12dp"
                android:scaleType="fitCenter" android:layout_marginRight="8dp" android:visibility="invisible"
                android:background="#00000000"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>