<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ThumbView -->
    <declare-styleable name="ThumbTextButton">
        <attr name="ttb_textColor" format="color"/>
        <attr name="ttb_floatTextColor" format="color"/>
        <attr name="ttb_textSize" format="dimension"/>
        <attr name="ttb_floatTextSize" format="dimension"/>
    </declare-styleable>


    <!-- Simple -->
    <declare-styleable name="WatchView">
        <!-- Basic Background-->
        <attr name="wtg_day_bg" format="color|reference"/>
        <attr name="wtg_night_bg" format="color|reference"/>
    </declare-styleable>
    <!-- ChangeSkin  for Style -->
    <declare-styleable name="WatchTextView">
        <!-- Basic Background-->
        <attr name="wtv_day_bg" format="color|reference"/>
        <attr name="wtv_night_bg" format="color|reference"/>
        <!-- Basic Text-->
        <attr name="wtv_day_textColor" format="color|reference"/>
        <attr name="wtv_night_textColor" format="color|reference"/>
    </declare-styleable>
 </resources>