<resources>

    <!-- Base application theme. Day Mode TODO:实现主题颜色切换 -->
    <style name="AppTheme" parent="Base.AppTheme"/>
    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Other attributes like colorPrimary, colorAccent etc. -->
        <item name="colorPrimary">#fafafa</item>
        <item name="colorPrimaryDark">#363636</item>
        <item name="colorAccent">#3c4043</item>
        <!--<item name="preferenceTheme">@style/PreferenceThemeOverlay</item>-->
        <item name="windowActionModeOverlay">true</item> <!-- 确保ActionMode 浮动在Toolbar上方 -->
        <!--<item name="android:windowContentTransitions">true</item>-->
    </style>

    <style name="NeedDrawerStyle" parent="AppTheme">
        <!-- Can not implements under 5.0 -->
        <!--<item name="android:windowDrawsSystemBarBackgrounds">true</item>-->
        <!--<item name="android:statusBarColor">@android:color/transparent</item>-->
    </style>

    <!-- Reading mode style -->
    <style name="ReadingModeStyle" parent="AppTheme">
        <!-- TODO: Take case for the implements in differ versions  -->
        <!--<item name="colorPrimaryDark">#000000</item>-->
    </style>

    <style name="ImageViewStyle" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#ffffff</item>
        <item name="android:textColorPrimary">#ffffff</item>
    </style>

    <!-- 夜间模式 -->
    <style name="NightMode" parent="AppTheme">
        <item name="colorPrimary">#212121</item>
        <item name="colorPrimaryDark">#060606</item>
        <item name="colorAccent">#979797</item>
    </style>


    <!-- ActionModeAnimation -->
    <style name="ActionModeAnima">
        <item name="android:windowEnterAnimation">@anim/action_bar_mode_in</item>
        <item name="android:windowExitAnimation">@anim/action_bar_mode_out</item>
    </style>

    <!-- 各类文字 -->

    <style name="AuthorNameTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#030303</item>
    </style>

    <style name="DateTimeTextStyle">
        <item name="android:textColor">#666</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CommentTextStyle">
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:textColor">#444</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <!--  设置页面的文本 Preference -->
    <style name="SettingSegmentText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#666</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <!-- 设置文字 -->
    <style name="SettingMainText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#444</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <!-- 设置文字的说明 -->
    <style name="SettingSubText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#989898</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <!--  个人收藏页面的三大分类 -->
    <style name="FavSegmentTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="layout_widthPercent">33.333%w</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#222</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:drawablePadding">4dp</item>
    </style>

    <style name="FavSegmentText" parent="FavSegmentTitle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#444</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:paddingLeft">8dp</item>
    </style>


    <!-- TabLayout Tab -->
    <style name="TabTextBlack">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!-- Toolbar Styles -->
    <style name="ToolbarExtraWrapper">
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>
    <style name="ToolbarText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Switch -->
    <style name="Color1SwitchStyle">
        <item name="colorControlActivated">#3288ff</item>
    </style>

    <style name="ImageHeaderViewRect">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
    </style>

    <style name="ImageButton40Base">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:scaleType">matrix</item>
        <item name="android:background">#00000000</item>
    </style>

    <style name="ThumbButtonBase" parent="ImageButton40Base">
        <item name="android:layout_width">56dp</item>
    </style>

    <!-- For better thumb down icon display -->
    <style name="ThumbDownSpec" parent="ThumbButtonBase">
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>


    <!-- TODO: 此类通过include整合 不要使用Style进行整合！ -->
    <style name="HorizontalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#a2a2a2</item>
    </style>

    <style name="ClickTextBase">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/selector_default_btn</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>

    <style name="CardBase">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

</resources>
