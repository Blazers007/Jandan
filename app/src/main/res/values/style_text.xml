<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AuthorNameTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#030303</item>
    </style>

    <style name="DateTimeTextStyle">
        <item name="android:textColor">#666</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CommentTextStyle">
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:textColor">#444</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <!--  设置页面的文本 Preference -->
    <style name="SettingSegmentText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#666</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <!-- 设置文字 -->
    <style name="SettingMainText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#444</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <!-- 设置文字的说明 -->
    <style name="SettingSubText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#989898</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <!--  个人收藏页面的三大分类 -->
    <style name="FavSegmentTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="layout_widthPercent">33.333%w</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#222</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:drawablePadding">4dp</item>
    </style>
    
    <style name="FavSegmentText" parent="FavSegmentTitle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#444</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:paddingLeft">4dp</item>
    </style>
</resources>